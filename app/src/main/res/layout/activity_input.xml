<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InputActivity">

    <ImageView
        android:id="@+id/pc_icon_imageView2"
        android:layout_width="90dp"
        android:layout_height="68dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/pc_icon" />

    <TextView
        android:id="@+id/appsecondText2"
        android:layout_width="220dp"
        android:layout_height="15dp"

        android:layout_marginStart="92dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="99dp"
        android:fontFamily="@font/kosugimaruregular"
        android:gravity="center_horizontal"
        android:text="@string/app_second_name"
        android:textAlignment="center"
        android:textColor="#957060"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/appnameText_kage2"
        android:layout_width="220dp"
        android:layout_height="42dp"

        android:layout_marginStart="96dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="95dp"
        android:fontFamily="@font/kosugimaruregular"
        android:gravity="center_horizontal"
        android:letterSpacing="0.2"
        android:lineSpacingExtra="8sp"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textColor="#C63C466E"
        android:textSize="44sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/appnameText2"
        android:layout_width="220dp"
        android:layout_height="42dp"

        android:layout_marginStart="92dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="99dp"
        android:fontFamily="@font/kosugimaruregular"
        android:gravity="center_horizontal"
        android:letterSpacing="0.2"
        android:lineSpacingExtra="8sp"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textColor="#17181C"
        android:textSize="44sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/employeeNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="100dp"
        android:ems="10"
        android:fontFamily="@font/kosugimaruregular"
        android:hint="社員番号を入力"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="100dp"
        android:ems="10"
        android:fontFamily="@font/kosugimaruregular"
        android:hint="名前を入力"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/userRegistButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="360dp"
        android:layout_marginEnd="100dp"
        android:backgroundTint="#DC749B9F"
        android:fontFamily="@font/kosugimaruregular"
        android:text="@string/user_regist"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>